<h1>Editing listing</h1>

<%= error_messages_for :listing %>

<% form_for(@listing) do |f| %>
  <p>
    <b>Grader</b><br />
    <%= f.select(method = :grader_id, collection = Grader.find(:all).collect{|c| [c.name, c.id] }) %>
  </p>
  <p>
    <b>Student</b><br />
    <%= f.select(method = :student_id, collection = Student.find(:all).collect{|c| [c.name, c.id] }) %>
  </p>
  <p>
    <b>Disposition</b><br />
<%= f.radio_button :disposition, :r %>Received<br />
<%= f.radio_button :disposition, :i %>Incomplete When Sent to Grader<br />
<%= f.radio_button :disposition, :lt %>Lost in Transit<br />
<%= f.radio_button :disposition, :lgp %>Lost in Grader's Possession<br />
<%= f.radio_button :disposition, '', options={:checked => true} %>Still During Grace Period<br />
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @listing %> |
<%= link_to 'Back', listings_path %>
